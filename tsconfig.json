{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src", "postcss.config.js", "tailwind.config.js", "postcss.config.js"],
  "exclude": ["node_modules"]
}
